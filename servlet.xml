<!--REPL servlet-->
<servlet>
    <servlet-name>repl</servlet-name>
    <servlet-class>ru._1c.tools.ReplServlet</servlet-class>
    <init-param>
        <param-name>type</param-name>
        <param-value>${type}</param-value>
    </init-param>
    <init-param>
        <param-name>port</param-name>
        <param-value>${port}</param-value>
